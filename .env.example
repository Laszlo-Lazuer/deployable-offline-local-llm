# LLM Configuration
# Set to 'gpu' to enable GPU acceleration, 'cpu' for CPU-only mode
LLM_DEVICE=cpu

# Ollama Configuration
OLLAMA_NUM_GPU=0  # Set to number of GPUs to use (0 for CPU-only)
OLLAMA_GPU_LAYERS=0  # Number of layers to offload to GPU (0 for CPU-only)

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Data Directory
DATA_DIR=/app/data

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0
